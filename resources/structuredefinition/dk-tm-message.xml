<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="dk-tm-message" />
  <url value="http://trifork.dk/fhir/StructureDefinition/dk-tm-message" />
  <name value="Telemedicine message" />
  <status value="draft" />
  <description value="This is the profile for general messaging in the eHealth platform. It covers four different message types: messages, notifications, advice, and notes. This is specified using the message category (value set &quot;Message category&quot;). When needed, a message medium may also be specified: NemSMS or eBoks (value set &quot;Message medium&quot;).&#xD;&#xA;&#xD;&#xA;Message-related state, such as whether a message has been read or not, is handled through the use of the Provenance resource." />
  <copyright value="Trifork A&amp;S" />
  <fhirVersion value="3.0.1" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Communication" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Communication" />
  <derivation value="constraint" />
  <differential>
    <element id="Communication">
      <path value="Communication" />
      <definition value="An occurrence of information being transmitted; e.g. an alert that was sent to a responsible provider, a public health agency was notified about a reportable condition.." />
    </element>
    <element id="Communication.identifier">
      <path value="Communication.identifier" />
      <definition value="Identifiers associated with this Communication that are defined by business processes and/ or used to refer to it when a direct URL reference to the resource itself is not appropriate (e.g. in CDA documents, or in written / printed documentation)" />
    </element>
    <element id="Communication.partOf">
      <path value="Communication.partOf" />
      <short value="The CarePlan that this communication relates to" />
      <definition value="The CarePlan that this communication relates to (when relevant)" />
      <type>
        <code value="Reference" />
        <targetProfile value="http://hl7.org/fhir/StructureDefinition/CarePlan" />
      </type>
    </element>
    <element id="Communication.category">
      <path value="Communication.category" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="coding.system" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <min value="1" />
    </element>
    <element id="Communication.category:DkTmCategory">
      <path value="Communication.category" />
      <sliceName value="DkTmCategory" />
      <min value="1" />
      <max value="1" />
    </element>
    <element id="Communication.category:DkTmCategory.coding">
      <path value="Communication.category.coding" />
      <binding>
        <strength value="required" />
        <valueSetUri value="http://trifork.dk/fhir/ValueSet/dk-tm-message-category" />
      </binding>
    </element>
    <element id="Communication.category:DkTmCategory.coding.system">
      <path value="Communication.category.coding.system" />
      <min value="1" />
      <fixedUri value="http://trifork.dk/dk-tm-message-category" />
    </element>
    <element id="Communication.category:DkTmCategory.coding.code">
      <path value="Communication.category.coding.code" />
      <binding>
        <strength value="required" />
        <valueSetUri value="http://trifork.dk/fhir/ValueSet/dk-tm-message-category" />
      </binding>
    </element>
    <element id="Communication.medium">
      <path value="Communication.medium" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="coding.system" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <min value="1" />
    </element>
    <element id="Communication.medium:DkTmMedium">
      <path value="Communication.medium" />
      <sliceName value="DkTmMedium" />
      <min value="1" />
      <max value="1" />
      <binding>
        <extension url="http://hl7.org/fhir/StructureDefinition/elementdefinition-bindingName">
          <valueString value="CommunicationMedium" />
        </extension>
        <strength value="example" />
        <description value="Codes for communication mediums" />
        <valueSetUri value="http://trifork.dk/fhir/ValueSet/dk-tm-message-medium" />
      </binding>
    </element>
    <element id="Communication.medium:DkTmMedium.coding.system">
      <path value="Communication.medium.coding.system" />
      <min value="1" />
      <fixedUri value="http://trifork.dk/dk-tm-message-medium" />
    </element>
    <element id="Communication.medium:DkTmMedium.coding.code">
      <path value="Communication.medium.coding.code" />
      <binding>
        <strength value="required" />
        <description value="A valid message medium must be supplied" />
        <valueSetUri value="http://trifork.dk/fhir/ValueSet/dk-tm-message-medium" />
      </binding>
    </element>
    <element id="Communication.recipient">
      <path value="Communication.recipient" />
      <min value="1" />
      <type>
        <code value="Reference" />
        <targetProfile value="http://hl7.org/fhir/StructureDefinition/Patient" />
      </type>
      <type>
        <code value="Reference" />
        <targetProfile value="http://hl7.org/fhir/StructureDefinition/Practitioner" />
      </type>
      <type>
        <code value="Reference" />
        <targetProfile value="http://hl7.org/fhir/StructureDefinition/CareTeam" />
      </type>
    </element>
    <element id="Communication.sender">
      <path value="Communication.sender" />
      <min value="1" />
      <type>
        <code value="Reference" />
        <targetProfile value="http://hl7.org/fhir/StructureDefinition/Patient" />
      </type>
      <type>
        <code value="Reference" />
        <targetProfile value="http://hl7.org/fhir/StructureDefinition/Practitioner" />
      </type>
      <type>
        <code value="Reference" />
        <targetProfile value="http://hl7.org/fhir/StructureDefinition/CareTeam" />
      </type>
    </element>
    <element id="Communication.payload">
      <path value="Communication.payload" />
      <max value="1" />
    </element>
    <element id="Communication.payload.content[x]:contentString">
      <path value="Communication.payload.contentString" />
      <sliceName value="contentString" />
      <type>
        <code value="string" />
      </type>
    </element>
  </differential>
</StructureDefinition>